{
	"schemaVersion": 1,
	"id": "bottomless-inventory",
	"version": "${version}",
	"name": "Bottomless Inventory",
	"description": "Replaces survival inventory with infinite creative-style storage. The 27 storage slots above the hotbar are replaced with unlimited storage, presented through a creative-mode-style GUI.",
	"authors": [
		"Chayut"
	],
	"contact": {
		"homepage": "https://github.com/chayut/bottomless-inventory"
	},
	"license": "CC0-1.0",
	"icon": "assets/bottomless-inventory/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"com.chayut.bottomlessinventory.BottomlessInventory"
		],
		"client": [
			"com.chayut.bottomlessinventory.BottomlessInventoryClient"
		]
	},
	"mixins": [
		"bottomless-inventory.mixins.json",
		{
			"config": "bottomless-inventory.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.18.4",
		"minecraft": "~1.21.10",
		"java": ">=21",
		"fabric-api": "*"
	},
	"suggests": {
		"modmenu": "*"
	}
}